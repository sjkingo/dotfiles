! Subpixel rendering and anti-aliasing.
! Requires freetype-freeworld from rpmfusion
Xft.lcdfilter:                  lcddefault
Xft.antialias:                  true
Xft.rgba:                       rgb
Xft.hinting:                    true
Xft.hintstyle:                  hintslight

! rxvt-unicode settings
URxvt.letterSpace:              -1
URxvt.font:                     xft:Ubuntu Mono:pixelsize=16
URxvt.borderless:               true
URxvt.saveLines:                10000
URxvt.scrollBar:                false
URxvt.mouseWheelScrollPage:     false

! Clipboard and url matcher for rxvt-unicode.
! Requires the following perl extensions: perl-Clipboard
URxvt.perl-ext-common:          default,matcher,clipboard
URxvt.url-launcher:             /bin/google-chrome
URxvt.matcher.button:           1
URxvt.colorUL:                  #4682B4

! Set colours for all terminal apps.
! Here we mimic the default xterm 256color scheme, but tone
! down some of the bolds and invert the background for easy
! night-time reading.
*background: #000000
*foreground: #ffffff
